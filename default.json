{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":semanticCommitTypeAll(chore)"
  ],
  "rangeStrategy": "update-lockfile",
  "dependencyDashboard": false,
  "stabilityDays": 7,
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "matchPackageNames": ["sweetalert2"],
      "stabilityDays": 0
    }
  ]
}
